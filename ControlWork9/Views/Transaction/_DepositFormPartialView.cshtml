@model ControlWork9.ViewModels.DepositViewModel

<div class="container mt-4">
    <div class="card bg-secondary">
        <div class="card-header">
            <h4>Пополнение счета</h4>
            <h5>Баланс: @ViewData["Balance"]</h5>
        </div>
        <div class="card-body">
            <div id="message"></div>
            <form id="depositForm">
                <div class="form-group">
                    <label for="toAccount">Номер счета</label>
                    <input type="number" id="toAccount" name="ToAccount" class="form-control" value="@Model?.ToAccount" required/>
                    <span asp-validation-for="ToAccount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="amount">Сумма пополнения</label>
                    <input type="number" step="0.01" id="amount" name="Amount" class="form-control" value="@Model?.Amount" required/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Пополнить</button>
            </form>
        </div>
        <div class="card-footer">
            <h5>Баланс: @ViewData["Balance"]</h5>
        </div>
    </div>
</div>
